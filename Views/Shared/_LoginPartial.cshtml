@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> signInManager;

<ul style="display:flex;justify-content:center;align-items:center;">
    @if (signInManager.IsSignedIn(User))
    {
        <a class="nav-link text-white" asp-action="Index" asp-controller="News">News</a>
        <li class="text-white list-unstyled text-uppercase">@User.Identity!.Name</li>
        <a class="nav-link text-white" asp-action="Logout" asp-controller="Account">Logout</a>
    }
    else
    {
         <a class="nav-link text-white text-decoration-none" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
         <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    }
</ul>